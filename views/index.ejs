<%- include("partials/header"); -%>

<div id="index-list">
    <h1>Check out these wishlists</h1>
        <% wishlists.forEach(function(wishlist) { %>
            <div id="index-content">
                <h2 class="username"><%= wishlist.wishlist.username %></h2><p> - <%= wishlist.wishlist.wish1 %></p>
            </div>
        <% }); %>
</div>

<script>
    const redirectIndex = document.querySelectorAll('.username');
    redirectIndex.forEach(redirectIndex => {
        redirectIndex.addEventListener('click', e => {
            e.preventDefault();
            location.assign(`/${redirectIndex.innerText}`);
        });
    });
</script>

<%- include("partials/footer"); -%>