</head>
<body>
    <nav>
        <h2 id="logo"><a href="/">Logo</a></h2>
        <h1>Wishlist</h1>

        <% if (user) { %>
            <p data-doc="<%= user.username %>" class="welcome">Welcome back, <%= user.username %></p>
            <h2><a href="/logout">Log out</a></h2>
            <% if (user.isAdmin === true) { %>
                <h2><a href="/adminsecret">Admin page</a></h2>
            <% } else { %>

            <% } %>
        <% } else { %>
            <h2><a href="/sign-in">Sign in</a></h2>
            <h2><a href="/sign-up">Sign up</a></h2>
        <% } %>
    </nav>